#/bin/bash

CONDA_BUILD=$1
CONDA_REPO=$2
TARGET=$3

conda_pkg_name=$($CONDA_BUILD --output $TARGET)
conda_pkg_target=$(realpath --relative-to=$CONDA_PREFIX/conda-bld $conda_pkg_name)
conda_pkg_path=$CONDA_REPO/$(dirname $conda_pkg_target)

echo "conda_pkg_name=$conda_pkg_name"
echo "conda_pkg_target=$conda_pkg_target"
echo "conda_pkg_path=$conda_pkg_path"

mkdir -p $conda_pkg_path

cp -f $conda_pkg_name $conda_pkg_path
